<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Menu"
    android:focusableInTouchMode="false">
    
    <TextView
        android:id="@+id/txtvi_testSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="@string/text_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
  	<ImageButton
        android:id="@+id/imgbtn_startDrinking"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtvi_testSettings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:contentDescription="@string/title_activity_evening"
        android:background="@drawable/zur_bar"
        android:onClick="openEvening" />
        
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_history"
        android:layout_alignParentBottom="true"
        android:background="#00C8FF"
        android:onClick="startSettings"
        android:text="@string/title_activity_settings"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_settings"
        android:layout_marginBottom="19dp"
        android:background="#00C8FF"
        android:onClick="openHistory"
        android:text="@string/title_activity_history"
        android:textColor="#FFFFFF" />

</RelativeLayout>