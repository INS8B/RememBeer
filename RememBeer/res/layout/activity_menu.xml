<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Menu"
    android:focusableInTouchMode="false">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/kotzen" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/lightBlue"
        android:onClick="startSettings"
        android:text="@string/title_activity_settings"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/lightBlue"
        android:onClick="openHistory"
        android:text="@string/title_activity_history"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtvi_testSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_settings"
        android:layout_alignTop="@+id/imageView1"
        android:text="@string/text_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/imgbtn_startDrinking"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="51dp"
        android:background="@drawable/zur_bar"
        android:contentDescription="@string/title_activity_evening"
        android:onClick="openEvening" />

</RelativeLayout>