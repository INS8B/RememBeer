<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Menu"
    android:focusableInTouchMode="false">

    <ImageButton
        android:id="@+id/imgbtnStartDrinking"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:onClick="openEvening"
        android:layout_centerInParent="true"
        android:background="@drawable/button_default" />

    <Button
        android:id="@+id/btSettings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgbtnStartDrinking"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_default"
        android:onClick="startSettings"
        android:text="Einstellungen" />

    <Button
        android:id="@+id/btHistory"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btSettings"
        android:layout_alignLeft="@+id/btSettings"
        android:background="@drawable/button_default"
        android:onClick="openEvening"
        android:text="Drinking History" />

    <TextView
        android:id="@+id/txtvi_testSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imgbtnStartDrinking"
        android:layout_marginRight="18dp"
        android:layout_marginTop="38dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>