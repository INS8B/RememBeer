<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Evening" >

   <TableLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="37dp" >

       <TableRow
           android:id="@+id/tableRow4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >
           
           <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Aktueller Promillestand"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		
		    <TextView
		        android:id="@+id/txtvi_currentBloodAlcohol"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="0.0â€°"
                android:paddingLeft="10dp"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
       </TableRow>

       <TableRow
           android:id="@+id/tableRow5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >
		    
           <TextView
		       android:id="@+id/txtvi_currentDrinkTime"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:text="00:00"
		       android:textAppearance="?android:attr/textAppearanceMedium" />
           
           <ImageButton
               android:id="@+id/imgbtn_currentDrink"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:contentDescription="current drink"/>
       </TableRow>
   </TableLayout>
   
    

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:stretchColumns="0,1,2" >

       <TableRow
           android:id="@+id/tableRow1"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1">

           <ImageButton
               android:id="@+id/imgbtn_drinkOne"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="drink one"
               android:src="@drawable/beer"
               android:onClick="chooseDrinkOne" />

           <ImageButton
               android:id="@+id/imgbtn_two"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="drink one"
               android:src="@drawable/beerglass"
               android:onClick="chooseDrinkTwo" />

           <ImageButton
               android:id="@+id/imgbtn_drinkThree"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="drink one"
               android:src="@drawable/beer"
               android:onClick="chooseDrinkThree" />

       </TableRow>

       <TableRow
           android:id="@+id/tableRow2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <ImageButton
               android:id="@+id/imgbtn_drinkFour"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="drink one"
               android:src="@drawable/coctail"
               android:onClick="chooseDrinkFour" />

           <ImageButton
               android:id="@+id/imgbtn_drinkFive"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="drink one"
               android:src="@drawable/coctail"
               android:onClick="chooseDrinkFive" />

           <ImageButton
               android:id="@+id/imgbtn_drinkSix"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="drink one"
               android:src="@drawable/coctail"
               android:onClick="chooseDrinkSix" />
       </TableRow>

       <TableRow
           android:id="@+id/tableRow3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <ImageButton
               android:id="@+id/imgbtn_drinkSeven"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="drink one"
               android:src="@drawable/wineglass"
               android:onClick="chooseDrinkSeven" />

           <ImageButton
               android:id="@+id/imgbtn_drinkEight"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="drink one"
               android:src="@drawable/wineglass"
               android:onClick="chooseDrinkEight" />

           <ImageButton
               android:id="@+id/imgbtn_drinkNine"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:contentDescription="drink one"
               android:src="@drawable/wineglass"
               android:onClick="chooseDrinkNine" />
       </TableRow>
   </TableLayout>

   

   

</RelativeLayout>
